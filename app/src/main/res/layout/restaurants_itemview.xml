<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="8dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/restaurant_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mont Berliner" />

    <TextView
        android:id="@+id/restaurant_item_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/restaurant_item_iv_picture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="120m" />

    <ImageView
        android:id="@+id/restaurant_item_iv_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/Restaurant_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        />

    <TextView
        android:id="@+id/restaurant_item_tv_food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_item_tv_name"
        tools:text="French"/>

    <TextView
        android:id="@+id/restaurant_item_tv_upperscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:text="@string/upperscore"
        app:layout_constraintStart_toEndOf="@id/restaurant_item_tv_food_type"
        app:layout_constraintEnd_toStartOf="@id/restaurant_item_tv_adress"
        app:layout_constraintTop_toBottomOf="@id/restaurant_item_tv_name"
        />
    <TextView
        android:id="@+id/restaurant_item_tv_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/restaurant_item_tv_upperscore"
        app:layout_constraintTop_toBottomOf="@id/restaurant_item_tv_name"
        tools:text="12 rue NicolaÃ¯"
        />

    <ImageView
        android:id="@+id/restaurant_item_iv_person"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/people_icon"
        app:layout_constraintEnd_toStartOf="@id/restaurant_item_tv_number"
        app:layout_constraintTop_toBottomOf="@id/restaurant_item_tv_distance"
        app:srcCompat="@drawable/ic_baseline_person_outline_24"/>

    <TextView
        android:id="@+id/restaurant_item_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/restaurant_item_iv_picture"
        app:layout_constraintTop_toBottomOf="@id/restaurant_item_tv_distance"
        tools:text="(3)"
        />

    <TextView
        android:id="@+id/restaurant_item_tv_closure_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_item_tv_food_type"
        tools:text="Open until 7pm"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>